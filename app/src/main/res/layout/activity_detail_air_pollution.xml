<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailAirPollutionActivity">

    <ImageView
        android:id="@+id/ivBackgroundAirPollution"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_act_air_pollution"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tvTitleAirPollution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:text="Calidad del Aire"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAirPollution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="32dp"
        android:layout_marginHorizontal="16sp"
        app:cardBackgroundColor="#59000000"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleAirPollution">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCalidadAireAirPollution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16sp"
                android:textSize="30sp"
                android:textColor="@color/white"
                tools:text="Calidad del aire:" />

            <TextView
                android:id="@+id/tvConcCOAirPollution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                tools:text="Concentración de CO:" />

            <TextView
                android:id="@+id/tvConcNOAirPollution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                tools:text="Concentración de NO:" />

            <TextView
                android:id="@+id/tvConcNO2AirPollution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                tools:text="Concentración de NO2:" />

            <TextView
                android:id="@+id/tvConcO3AirPollution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                tools:text="Concentración de O3:" />

            <TextView
                android:id="@+id/tvConcSO2AirPollution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                tools:text="Concentración de SO2:" />

            <TextView
                android:id="@+id/tvConcPM25AirPollution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                tools:text="Concentración de PM25:" />

            <TextView
                android:id="@+id/tvConcPM10AirPollution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                tools:text="Concentración de PM10:" />

            <TextView
                android:id="@+id/tvConcNH3AirPollution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                tools:text="Concentración de NH3:" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>